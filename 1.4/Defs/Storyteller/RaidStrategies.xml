          <li>RE_Reaper2_South</li>
          <li>RE_Reaper2_East</li>
          <li>RE_Reaper2_West</li>
          <li>RE_Reaper3_North</li>
          <li>RE_Reaper3_South</li>
          <li>RE_Reaper3_East</li>
          <li>RE_Reaper3_West</li>
          <li>RE_Reaper4_North</li>
          <li>RE_Reaper4_South</li>
          <li>RE_Reaper4_East</li>
          <li>RE_Reaper4_West</li>
        </weightedStruct>
        <canBeUsedBy>
          <li>RE_Reapers</li>
        </canBeUsedBy>
