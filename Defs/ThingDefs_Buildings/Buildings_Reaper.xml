	<!-- resource container -->
	<ThingDef ParentName="RE_ReaperPart">
		<defName>RE_ReaperResourceContainer</defName>
		<label>reaper resource container</label>
		<description>A cargo module containing various raw resources often used by reapers to fix existing units or construct new ones. It can be destroyed to obtain valuable, exotic resources. This element is usually a part of a much larger ship.</description>
		<graphicData>
			<texPath>Things/Building/Reaper/Reaper_ReaperResourceContainer</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(1.2,3)</drawSize>
			<shadowData>
				<volume>(0.9, 1.0, 0.9)</volume>
			</shadowData>
			<damageData>
				<rect>(0.5, 0.1, 3, 2.8)</rect>
			</damageData>
		</graphicData>
		<rotatable>true</rotatable>
		<passability>Impassable</passability>
		<blockWind>true</blockWind>
		<fillPercent>1</fillPercent>
		<blockLight>true</blockLight>
		<canOverlapZones>false</canOverlapZones>
		<statBases>
			<WorkToBuild>16000</WorkToBuild>
			<MaxHitPoints>200</MaxHitPoints>
			<Flammability>0</Flammability>
		</statBases>
		<tickerType>Normal</tickerType>
		<size>(1,3)</size>
		<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
		<placeWorkers>
			<li>PlaceWorker_NotUnderRoof</li>
		</placeWorkers>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<building>
			<destroySound>BuildingDestroyed_Metal_Medium</destroySound>
		</building>
		<killedLeavings>
			<ChunkSlagSteel>6</ChunkSlagSteel>
			<Plasteel>40</Plasteel>
			<ComponentIndustrial>4</ComponentIndustrial>
			<Steel>100</Steel>
			<Gold>10</Gold>
			<Uranium>20</Uranium>
		</killedLeavings>
	</ThingDef>
	
