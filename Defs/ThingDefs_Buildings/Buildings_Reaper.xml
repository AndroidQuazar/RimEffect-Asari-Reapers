<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Base -->

	<ThingDef ParentName="BuildingBase" Name="RE_ReaperPart" Abstract="True">
		<pathCost>50</pathCost>
		<blockWind>true</blockWind>
		<!-- <thingClass>MyLovelyThingClass</thingClass> -->
		<soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
		<passability>Impassable</passability>
		<fillPercent>1.0</fillPercent>
		<tickerType>Normal</tickerType>
		<rotatable>true</rotatable>
		<altitudeLayer>BuildingOnTop</altitudeLayer>
		<selectable>true</selectable>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<drawerType>MapMeshOnly</drawerType>
		<repairEffect>ConstructMetal</repairEffect>
		<forceDebugSpawnable>true</forceDebugSpawnable>
		<!-- <designationCategory Inherit='False' /> -->
		<designationCategory>Ship</designationCategory>
		<placeWorkers>
			<li>PlaceWorker_NotUnderRoof</li>
		</placeWorkers>
		<building>
			<buildingTags>
				<li>RE_Reaper</li>
			</buildingTags>
			<soundAmbient>CrashedShipPart_Ambience</soundAmbient>
			<destroySound>BuildingDestroyed_Metal_Medium</destroySound>
		</building>
		<statBases>
			<Flammability>0</Flammability>
			<Beauty>-20</Beauty>
		</statBases>
		<damageMultipliers>
			<li>
				<damageDef>Flame</damageDef>
				<multiplier>0</multiplier>
			</li>
		</damageMultipliers>
	</ThingDef>

	<!-- 1x1 hull piece -->

	<ThingDef ParentName="RE_ReaperPart">
		<defName>RE_Reaper1x1Hull</defName>
		<label>reaper ship hull</label>
		<description>A block of nearly impenetrable plasteel shield. This element is usually a part of a much larger ship.</description>
		<graphicData>
			<texPath>Things/Building/Reaper/Reaper_ReaperHull</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1.05,1.05)</drawSize>
			<shadowData>
				<volume>(1, 0.2, 1)</volume>
			</shadowData>
		</graphicData>
		<rotatable>false</rotatable>
		<passability>PassThroughOnly</passability>
		<pathCost>50</pathCost>
		<fillPercent>0.4</fillPercent>
		<blockWind>true</blockWind>
		<blockLight>true</blockLight>
		<canOverlapZones>false</canOverlapZones>
		<statBases>
			<WorkToBuild>16000</WorkToBuild>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>0</Flammability>
		</statBases>
		<tickerType>Normal</tickerType>
		<size>(1,1)</size>
		<placeWorkers>
			<li>PlaceWorker_NotUnderRoof</li>
		</placeWorkers>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<building>
			<destroySound>BuildingDestroyed_Metal_Medium</destroySound>
		</building>
		<killedLeavings>
			<Plasteel>5</Plasteel>
		</killedLeavings>
	</ThingDef>
	
<!-- support beam -->
	<ThingDef ParentName="RE_ReaperPart">
		<defName>RE_ReaperSupportBeam</defName>
		<label>reaper support beam</label>
		<description>A structural beam to support a ship. It can be destroyed to obtain valuable resources. This element is usually a part of a much larger ship.</description>
		<graphicData>
			<texPath>Things/Building/Reaper/Reaper_SupportBeam4x1</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(1.8,4.1)</drawSize>
			<shadowData>
				<volume>(1.04, 1.0, 3.75)</volume>
			</shadowData>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<passability>Impassable</passability>
		<blockWind>true</blockWind>
		<fillPercent>1</fillPercent>
		<blockLight>true</blockLight>
		<canOverlapZones>false</canOverlapZones>
		<statBases>
			<WorkToBuild>8000</WorkToBuild>
			<MaxHitPoints>350</MaxHitPoints>
			<Flammability>0</Flammability>
		</statBases>
		<tickerType>Normal</tickerType>
		<size>(1,4)</size>
		<placeWorkers>
			<li>PlaceWorker_NotUnderRoof</li>
		</placeWorkers>
		<building>
			<destroySound>BuildingDestroyed_Metal_Medium</destroySound>
		</building>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<uiIconScale>1.2</uiIconScale>
		<killedLeavings>
			<ChunkSlagSteel>2</ChunkSlagSteel>
			<Steel>10</Steel>
			<Plasteel>10</Plasteel>
		</killedLeavings>
	</ThingDef>
	
