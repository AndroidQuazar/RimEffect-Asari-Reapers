<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseBullet">
    <defName>RE_Bullet_GoliathCannon</defName>
    <label>goliath cannon shot</label>
    <graphicData>
      <texPath>Things/Projectile/Charge_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>16</damageAmountBase>
      <speed>90</speed>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="BaseGunWithQuality">
    <defName>RE_Gun_GoliathCannon</defName>
    <label>goliath cannon</label>
    <description>Advanced charge blaster design improved with Reaper tech, Goliath cannons can melt through heavy defenses in no time.</description>
    <graphicData>
      <texPath>Things/Pawn/Reaper/Goliath/GoliathCannon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>1500</MarketValue>
      <Mass>22</Mass>
      <AccuracyTouch>0.2</AccuracyTouch>
      <AccuracyShort>0.28</AccuracyShort>
      <AccuracyMedium>0.28</AccuracyMedium>
      <AccuracyLong>0.2</AccuracyLong>
      <RangedWeapon_Cooldown>7.5</RangedWeapon_Cooldown>
    </statBases>
    <techLevel>Ultra</techLevel>
    <menuHidden>True</menuHidden>
    <tradeability>None</tradeability>
    <destroyOnDrop>true</destroyOnDrop>
    <tools>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2.5</cooldownTime>
      </li>
    </tools>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>RE_Bullet_GoliathCannon</defaultProjectile>
        <warmupTime>1.3</warmupTime>
        <range>26.9</range>
        <ticksBetweenBurstShots>4</ticksBetweenBurstShots>
        <burstShotCount>26</burstShotCount>
        <soundCast>Shot_ChargeBlaster</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>GoliathCannon</li>
    </weaponTags>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>RE_Bullet_RavagerRocket</defName>
    <label>ravager cannon shot</label>
    <graphicData>
      <texPath>Things/Projectile/Shot_MassAccelerated_Large</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Bomb</damageDef>
      <explosionRadius>3.9</explosionRadius>
      <speed>70</speed>
    </projectile>
  </ThingDef>

</Defs>