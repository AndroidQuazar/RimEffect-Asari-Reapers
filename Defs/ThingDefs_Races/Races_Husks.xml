<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BasePawn" Name="BaseHusk" Abstract="True">
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <statBases>
      <PsychicSensitivity>0.5</PsychicSensitivity>
      <ToxicSensitivity>0</ToxicSensitivity>
      <Flammability>0</Flammability>
      <ComfyTemperatureMin>-100</ComfyTemperatureMin>
      <ComfyTemperatureMax>250</ComfyTemperatureMax>
      <MeatAmount>0</MeatAmount>
      <ArmorRating_Heat>2.00</ArmorRating_Heat>
    </statBases>
    <receivesSignals>true</receivesSignals>
    <race>
      <fleshType>Mechanoid</fleshType>
      <needsRest>false</needsRest>
      <hasGenders>false</hasGenders>
      <foodType>None</foodType>
      <lifeExpectancy>2500</lifeExpectancy>
      <bloodDef>Filth_MachineBits</bloodDef>
    </race>
    <comps>
      <li Class="CompProperties_CanBeDormant" />
      <li Class="CompProperties_WakeUpDormant">
        <wakeUpOnDamage>true</wakeUpOnDamage>
        <anyColonistCloseCheckRadius>30</anyColonistCloseCheckRadius>
        <wakeUpSound>MechanoidsWakeUp</wakeUpSound>
      </li>
    </comps>
  </ThingDef>

  <PawnKindDef Name="BaseHuskKind" Abstract="True">
    <defaultFactionType>Mechanoid</defaultFactionType>
    <aiAvoidCover>true</aiAvoidCover>
    <destroyGearOnDrop>true</destroyGearOnDrop>
  </PawnKindDef>

  <!-- Banshee -->
  
  <ThingDef ParentName="BaseHusk">
    <defName>RE_Husk_Banshee</defName>
    <label>banshee</label>
    <description>Banshees are synthetic-organic creatures derived from asari and mutated by Reaper technology. Frighteningly intelligent, Banshees are advanced pressure units usually found leading a Reaper strike force.</description>
    <statBases>
      <MoveSpeed>1.9</MoveSpeed>
      <ArmorRating_Blunt>0.2</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.6</ArmorRating_Sharp>
      <PsychicSensitivity>0.8</PsychicSensitivity>
    </statBases>
    <tools>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>14</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
      </li>
      <li>
        <label>right claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>17</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
      </li>
      <li>
        <label>left claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>17</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
      </li>
    </tools>
    <race>
      <intelligence>ToolUser</intelligence>
      <thinkTreeMain>Mechanoid</thinkTreeMain>
      <body>RE_Asari</body>
      <baseBodySize>1.2</baseBodySize>
      <baseHealthScale>2.3</baseHealthScale>
      <lifeStageAges>
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Mech_Centipede_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_Centipede_Death</soundDeath>
          <soundCall>Pawn_Mech_Centipede_Call</soundCall>
        </li>
      </lifeStageAges>
      <soundCallIntervalRange>1000~2000</soundCallIntervalRange>
      <soundMeleeHitPawn>Pawn_Melee_MechanoidBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_MechanoidBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_MechanoidBash_Miss</soundMeleeMiss>
    </race>
    <butcherProducts>
      <Steel>40</Steel>
      <Plasteel>20</Plasteel>
    </butcherProducts>
  </ThingDef>

  <PawnKindDef ParentName="BaseHuskKind">
    <defName>RE_Husk_Banshee</defName>
    <label>banshee</label>
    <race>RE_Husk_Banshee</race>
    <combatPower>600</combatPower>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Reaper/Banshee/Banshee</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>1.6</drawSize>
          <shadowData>
            <volume>(0.6, 0.8, 0.6)</volume>
          </shadowData>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <modExtensions>
	  <li Class="RimEffect.PawnKindAbilityExtension">
		<giveAbilities>
			<li>RE_Biotic_Charge</li>
			<li>RE_Biotic_Singularity</li>
		</giveAbilities>
		<implantDef>RE_BioticAmpHediff</implantDef>
		<initialLevel>3</initialLevel>
		<giveRandomAbilities>true</giveRandomAbilities>
		</li>
    </modExtensions>
  </PawnKindDef>
  
  <!-- goliath -->
  <ThingDef ParentName="BaseHusk">
    <defName>RE_Husk_Goliath</defName>
    <label>goliath</label>
    <description>Synthetic-organic creature created using a mechanoid Centipede frame. Goliaths are often used as a heavily armored force to punch through fortified defenses. Their heavy armor and firepower makes them very effective against bunched-up static defenders. They are somewhat vulnerable to mobile hit-and-run tactics.</description>
    <statBases>
      <MoveSpeed>1.9</MoveSpeed>
      <ArmorRating_Blunt>0.25</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.75</ArmorRating_Sharp>
      <PsychicSensitivity>0.6</PsychicSensitivity>
    </statBases>
    <tools>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>17</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
      </li>
    </tools>
    <race>
      <intelligence>ToolUser</intelligence>
      <thinkTreeMain>Mechanoid</thinkTreeMain>
      <body>MechanicalCentipede</body>
      <baseBodySize>1.8</baseBodySize>
      <baseHealthScale>4.4</baseHealthScale>
      <lifeStageAges>
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Mech_Centipede_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_Centipede_Death</soundDeath>
          <soundCall>Pawn_Mech_Centipede_Call</soundCall>
        </li>
      </lifeStageAges>
      <soundCallIntervalRange>1000~2000</soundCallIntervalRange>
      <soundMeleeHitPawn>Pawn_Melee_MechanoidBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_MechanoidBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_MechanoidBash_Miss</soundMeleeMiss>
    </race>
    <butcherProducts>
      <Steel>30</Steel>
      <Plasteel>15</Plasteel>
    </butcherProducts>
  </ThingDef>

  <PawnKindDef ParentName="BaseHuskKind">
    <defName>RE_Husk_Goliath</defName>
    <label>goliath</label>
    <race>RE_Husk_Goliath</race>
    <combatPower>450</combatPower>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Reaper/Goliath/Goliath</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>3</drawSize>
          <shadowData>
            <volume>(0.6, 0.8, 0.6)</volume>
          </shadowData>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponMoney>1500~9999</weaponMoney>
    <weaponTags>
      <li>GoliathCannon</li>
    </weaponTags>
  </PawnKindDef>

</Defs>